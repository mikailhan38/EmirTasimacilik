@model Entites.Concrete.SocialMedia
@{
    ViewData["Title"] = "SocialMediaAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Sosyal Medya Adresleri Girişi</h1>
<div class="container">
    <div class="row">
        <div class="col-4">
            <form method="post">
                <div class="form-group mb-3">
                    @Html.Label("Başlık")
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" asp-for="Title" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    @Html.Label("Simge")
                    <span asp-validation-for="Icon" class="text-danger"></span>
                    <input type="text" asp-for="Icon" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    @Html.Label("Url")
                    <span asp-validation-for="Url" class="text-danger"></span>
                    <input type="text" asp-for="Url" class="form-control" />
                </div>
                <button class="btn btn-outline-success">Kaydet</button>
            </form>
        </div>
    </div>
</div>


