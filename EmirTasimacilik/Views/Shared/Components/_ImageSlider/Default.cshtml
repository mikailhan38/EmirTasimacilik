@using Entites.Concrete
@model List<Image>
<div class="container mt-5">
    <div id="carouselExample" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="carousel-item active">
                        <img src="~@item.ImageUrl" class="d-block w-100" alt="@item.Description" data-toggle="modal" data-target="#imageModal1">
                    </div>
                }
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<!-- Modals for Enlarged Images -->
@if (Model != null)
{
    @foreach (var item in Model)
    {


        <div class="modal fade" id="imageModal1" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <img src="~@item.ImageUrl" class="img-fluid" alt="@item.Description">
                    </div>
                </div>
            </div>
        </div>
    }
}
