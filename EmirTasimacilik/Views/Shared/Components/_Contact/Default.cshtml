@model Entites.Concrete.Contact
<section class="layout_padding py-5 bg-light">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="display-6">Bize Ulaşın</h2>
            <p class="text-muted">Sorularınız veya geri bildirimleriniz için formu doldurun</p>
        </div>
        <div class="row align-items-center">
            <!-- Form Alanı -->
            <div class="col-md-6">
                <form asp-controller="Contact" asp-action="SubmitContact" method="post">
                    <div class="mb-3">
                        <input class="form-control" type="text" asp-for="Name" placeholder="Ad Soyad" />
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="text" asp-for="Phone" placeholder="Telefon Numarası" />
                    </div>
                    <div class="mb-3">
                        <input class="form-control" type="email" asp-for="Email" placeholder="Email" />
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control message-box" asp-for="Message" rows="4" placeholder="Mesajınız"></textarea>
                    </div>
                    <div class="d-flex justify-content-start">
                        <button type="submit" class="btn btn-primary px-4">Gönder</button>
                    </div>
                </form>
            </div>
            <!-- Harita Alanı -->
            <div class="col-md-6">
                <div class="map_container rounded shadow-sm overflow-hidden" style="height: 100%;">
                    <div id="googleMap" style="width:100%;height:350px;"></div>
                </div>
            </div>
        </div>
    </div>
</section>
