@using Entites.Concrete
@model List<About>
<div class="container">
    <h4>
        İlteşime Geçin
    </h4>
    <div class="row">
        <div class="col-lg-10 mx-auto">
            @foreach (var item in Model)
            {
                <div class="info_items">
                    <div class="row">
                    <div class="col-md-4">
                        <a href="">
                            <div class="item ">
                                <div class="img-box ">
                                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                                </div>
                                <p>
                                    @item.Address
                                </p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="">
                            <div class="item ">
                                <div class="img-box ">
                                    <i class="fa fa-phone" aria-hidden="true"></i>
                                </div>
                                <p>
                                    @item.PhoneNumber
                                </p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="mailto:@item.Email">
                            <div class="item ">
                                <div class="img-box">
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                </div>
                                <p>
                                    @item.Email
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>