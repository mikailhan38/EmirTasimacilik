@{
    ViewData["Title"] = "ImageUpload";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>ImageUpload</h1>
@{
    ViewData["Title"] = "Resim Yükle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Resim Yükle</h4>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-controller="Image" asp-action="ImageUpload">
                        <div class="form-group">
                            <label for="file" class="form-label">Resim Seç</label>
                            <input type="file" class="form-control" id="file" name="file" required>
                        </div>

                        <div class="form-group mt-3">
                            <label for="description" class="form-label">Açıklama</label>
                            <input type="text" class="form-control" id="description" name="description" placeholder="Resim açıklaması" required>
                        </div>

                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-upload"></i> Yükle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


