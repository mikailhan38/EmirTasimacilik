@using Entites.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hakkımızda</h1>

<div class="contanier">
    <div class="row">
        <h3>Hakkımızda</h3>
        
        <div class="col-12">
            @if (Model.Count < 1)
            {
                <a asp-action="AboutAdd" asp-controller="About" class="btn btn-outline-primary">Ekle</a>
            }
            <table class="table table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Telefon</th>
                        <th>Email</th>
                        <th>Adres</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AboutUsId</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td><a asp-action="AboutUpdate" asp-controller="About" asp-route-id="@item.AboutUsId" class="btn btn-outline-info">Düzenle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

